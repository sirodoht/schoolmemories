[Unit]
Description=dukkha
After=network.target

[Service]
Type=simple
User=deploy
Group=www-data
WorkingDirectory=/var/www/dukkha
ExecStart=/var/www/dukkha/.venv/bin/gunicorn -b 127.0.0.1:5000 -w 4 --access-logfile - dukkha.wsgi
ExecReload=/bin/kill -HUP $MAINPID
Environment="DEBUG={{ debug }}"
Environment="LOCALDEV={{ localdev }}"
Environment="SECRET_KEY={{ secret_key }}"
TimeoutSec=15
Restart=always

[Install]
WantedBy=multi-user.target
